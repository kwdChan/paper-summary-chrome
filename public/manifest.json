{
  "manifest_version": 3,
  "name": "Paper Summary Chrome",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Paper Summary Chrome",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "alarms",
    "notifications",
    "windows"
  ],
  "commands": {

    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+F",
        "mac": "Ctrl+Shift+F",
        "chromeos": "Ctrl+Shift+F",
        "linux": "Ctrl+Shift+F"
      }
    },
    "summarise": {
      "description": "Summarise it!",
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      }
    }


  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*","http://kawac.ddns.net:23073/*"]
  }


}
